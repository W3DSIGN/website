---
import Layout from "../layouts/Layout.astro";
import { Footer } from "../components/layout/Footer";

// This is a template for a single project page.
// In a real headless setup, this would be [slug].astro and fetch data based on the slug.

const project = {
  name: "NINA RICCI",
  collection: "SS26",
  location: "PARIS",
  service: "FITTINGS MANAGEMENT",
  description:
    "A comprehensive approach to fittings management, ensuring every garment fits perfectly for the runway. Our team coordinated with designers and models to achieve the perfect look.",
  coverImage:
    "https://images.unsplash.com/photo-1539109136881-3be0616acf4b?q=80&w=2787&auto=format&fit=crop",
  gallery: [
    "https://images.unsplash.com/photo-1509631179647-0177331693ae?q=80&w=2832&auto=format&fit=crop",
    "https://images.unsplash.com/photo-1581044777550-4cfa60707c03?q=80&w=2786&auto=format&fit=crop",
    "https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?q=80&w=2000&auto=format&fit=crop",
  ],
};
---

<Layout title={`${project.name} | W3DSIGN`}>
  <main class="w-full min-h-screen bg-theme text-theme pt-24">
    {/* Project Header */}
    <header class="px-4 md:px-8 lg:px-16 mb-12 md:mb-24">
      <div class="mb-4">
        <a
          href="/"
          class="text-sm font-kode-mono uppercase opacity-60 hover:opacity-100 transition-opacity"
          >‚Üê Back to Home</a
        >
      </div>
      <h1
        class="text-[12vw] md:text-[8vw] leading-[0.8] font-kode-mono uppercase tracking-tighter mb-8"
      >
        {project.name}
      </h1>
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 font-kode-mono text-sm md:text-base uppercase opacity-80 border-t border-theme/20 pt-4"
      >
        <div>
          <span class="block opacity-50 text-xs mb-1">Collection</span>
          {project.collection}
        </div>
        <div>
          <span class="block opacity-50 text-xs mb-1">Location</span>
          {project.location}
        </div>
        <div>
          <span class="block opacity-50 text-xs mb-1">Service</span>
          {project.service}
        </div>
      </div>
    </header>

    {/* Hero Image */}
    <div class="w-full h-[60vh] md:h-[80vh] overflow-hidden mb-16 md:mb-32">
      <img
        src={project.coverImage}
        alt={project.name}
        class="w-full h-full object-cover grayscale"
      />
    </div>

    {/* Project Description */}
    <section
      class="px-4 md:px-8 lg:px-16 mb-16 md:mb-32 max-w-4xl mx-auto text-center"
    >
      <p class="text-xl md:text-3xl leading-relaxed font-light">
        {project.description}
      </p>
    </section>

    {/* Gallery Grid */}
    <section
      class="px-4 md:px-8 lg:px-16 mb-24 grid grid-cols-1 md:grid-cols-2 gap-4"
    >
      {
        project.gallery.map((image, index) => (
          <div
            class={`relative aspect-[3/4] overflow-hidden ${index === 2 ? "md:col-span-2 md:aspect-[16/9]" : ""}`}
          >
            <img
              src={image}
              alt={`Gallery ${index + 1}`}
              class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
            />
          </div>
        ))
      }
    </section>

    {/* Next Project Navigation (Mockup) */}
    <div class="border-t border-theme/20">
      <div class="px-4 md:px-8 lg:px-16 py-12 md:py-24 text-center">
        <p class="font-kode-mono text-sm uppercase opacity-50 mb-4">
          Next Project
        </p>
        <a
          href="#"
          class="text-[8vw] leading-[0.8] font-kode-mono uppercase tracking-tighter hover:text-brand-pink transition-colors"
        >
          LOUBOUTIN
        </a>
      </div>
    </div>

    <Footer client:load />
  </main>
</Layout>
