---
const brands = ["Nike", "Adidas", "Spotify", "Apple", "Google", "Samsung"];
---

<section class="py-20 px-6 bg-gray-50 border-y border-gray-200">
  <div class="max-w-6xl mx-auto text-center">
    <p
      class="text-sm font-bold uppercase tracking-widest text-brand-pink mb-12"
    >
      Trusted by industry leaders
    </p>
    <div
      class="flex flex-wrap justify-center gap-12 md:gap-20 opacity-50 grayscale hover:grayscale-0 transition-all duration-500"
    >
      {
        brands.map((brand) => (
          <div class="text-2xl md:text-3xl font-black italic text-brand-pink hover:text-brand-pink transition-colors cursor-default">
            {brand}
          </div>
        ))
      }
    </div>
  </div>
</section>
